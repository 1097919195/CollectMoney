<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="应收"
                android:textSize="@dimen/item_text_size_25"
                android:gravity="center"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/final_fact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/item_text_size_30"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
        <View
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="合计支付"
                android:textSize="@dimen/item_text_size_25"
                android:gravity="center"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/final_totals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/item_text_size_30"
                android:gravity="center"
                android:textColor="@color/black"/>

        </LinearLayout>
        <View
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="找零"
                android:textSize="@dimen/item_text_size_25"
                android:gravity="center"
                android:textColor="@color/orange"/>
            <TextView
                android:id="@+id/oddChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/item_text_size_30"
                android:gravity="center"
                android:textColor="@color/orange"/>

        </LinearLayout>

    </LinearLayout>
    <CheckBox
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account"
        android:text="结算后打印"
        android:textColor="@color/tv_right_gray"/>
    <EditText
        android:layout_above="@+id/recycleView"
        android:textCursorDrawable="@drawable/cursor"
        android:maxLength="9"
        android:textColor="#444444"
        android:textColorHint="#ffffff"
        android:layout_gravity="center"
        android:text="0"
        android:background="@null"
        android:layout_width="match_parent"
        android:lines="2"
        android:layout_height="wrap_content"
        android:id="@+id/edit_getAmount"
        android:inputType="numberDecimal"
        android:numeric="decimal"
        android:textSize="40sp"
        android:gravity="center"
        android:enabled="true"
        android:layout_marginBottom="10dp"

        />

    <android.support.v7.widget.RecyclerView
        android:layout_above="@+id/ll_btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycleView">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_btn_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/clearAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_gray"
            android:textSize="@dimen/item_text_size_25"
            android:padding="10dp"
            android:text="全部清除"
            android:textColor="@color/tv_right_gray"/>
        <Button
            android:id="@+id/commitNum"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_light_blue"
            android:textColor="@color/white"
            android:textSize="@dimen/item_text_size_25"
            android:padding="10dp"
            android:text="结算"/>
    </LinearLayout>

</RelativeLayout>