<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toast_stroke_gray"
    tools:context="com.example.collect.collectmoneysystem.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:orientation="vertical">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_first_normal"
                    android:textSize="@dimen/item_text_size_25"
                    android:textColor="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="轻触选择会员"/>
                <LinearLayout
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_normal"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <TextView
                        android:gravity="center"
                        android:text="品名"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"/>
                    <TextView
                        android:gravity="center"
                        android:text="规格"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:gravity="center"
                        android:text="码号"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:gravity="center"
                        android:text="单价"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/productDetailIrc"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/ic_preference_normal"
                    android:text="deasdf"
                    android:textSize="@dimen/item_text_size_20"/>
                <LinearLayout
                    android:background="@drawable/btn_white"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总数："
                                />
                            <TextView
                                android:id="@+id/goods_counts"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="折扣："
                                />
                            <TextView
                                android:id="@+id/discount"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="合计："
                                />
                            <TextView
                                android:id="@+id/goods_totals"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="应收："
                                />
                            <TextView
                                android:id="@+id/receivable"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/goods_clear"
                        android:layout_marginLeft="14dp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_white"
                        android:text="清空商品"
                        android:textSize="@dimen/item_text_size_25"
                        android:padding="10dp"
                        android:textColor="@color/red"/>
                    <TextView
                        android:layout_marginRight="14dp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_white"
                        android:text="挂单"
                        android:padding="10dp"
                        android:textSize="@dimen/item_text_size_25"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <Button
                    android:id="@+id/noCode_collect"
                    android:layout_marginStart="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_white"
                    android:text="无码收银"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text_size_25"
                    android:padding="10dp"/>
                <Button
                    android:layout_toRightOf="@+id/noCode_collect"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_white"
                    android:text="整单折扣"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/item_text_size_25"
                    android:padding="10dp"/>
                <Button
                    android:id="@+id/add_goods"
                    android:layout_marginEnd="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_light_blue"
                    android:text="继续添加商品"
                    android:textColor="@color/white"
                    android:textSize="@dimen/item_text_size_25"
                    android:padding="10dp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <include layout="@layout/layout_main_right" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
