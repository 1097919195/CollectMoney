<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_corner4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#5A69CC"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/md_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="提示"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/md_dialog_exit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/dialog_exit"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/md_dialog3_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@mipmap/send_start" />

        <ProgressBar
            android:id="@+id/pb_dialog"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/md_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="内容"
            android:textColor="@color/black_light"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/md_dialog3_llbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/md_dialog3_leftbtn"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="#5B69CC"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/md_dialog3_rightbtn"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="50dp"
            android:background="#999999"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/md_dialog3_llbox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/md_dialog3_centerbtn"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="#5B69CC"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>