<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_corner4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#5A69CC"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/md_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="提示"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />
        <ImageView
            android:id="@+id/md_dialog_exit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/dialog_exit"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/md_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="内容"
        android:textColor="@color/black_light"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="信&#160;&#160;箱&#160;&#160;号:"
            android:textSize="18sp"
            android:layout_weight="1.2"
            android:gravity="end"
          />

        <TextView
            android:id="@+id/md_dialog_txt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="036"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="#5C6CCD"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="部&#160;&#160;&#160;&#8201;&#160;&#160;&#8201;&#160;&#8201;门:"
            android:textSize="18sp"
            android:layout_weight="1.2"
            android:gravity="end"
            />

        <TextView
            android:id="@+id/md_dialog_txt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="收发科"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="#5C6CCD"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="已发报刊:"
            android:textSize="18sp"
            android:layout_weight="1.2"
            android:gravity="end" />
        <TextView
            android:id="@+id/md_dialog_txt3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="人民日报\n人民日报\n人民日报"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="#5C6CCD"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/md_dialog_leftbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_widget_md_dialog"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:maxWidth="70dp"
            android:minWidth="47dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="取消"
            android:textColor="@color/black_light"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/md_dialog_rightbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/selector_widget_md_dialog"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:maxWidth="70dp"
            android:minWidth="47dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="确定"
            android:textColor="@color/black_light"
            android:textSize="14sp"

            />


    </LinearLayout>


</LinearLayout>